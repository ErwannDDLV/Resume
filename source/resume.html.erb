<div class="container">
  <div class="row">
    <% data.jobs.each do |job| %>
      <div class="col-lg-12 col-sm-6 col-xs-12">
        <div class="card">

            <div class="card-logo">
              <%= image_tag job.logo, {class: "job_image"} %>
            </div>
            <div class="card-company"><%= job.company%></div>

          <div class=card-description>
            <p><%= job.activity %></p>
            <p><%= job.city %></p>
            <p>de <%= job.date_in %> au <%= job.date_out %></p>
            <p><%= job.status %></p>
            <p><%= job.functions %></p>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
