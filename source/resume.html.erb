<div class="container">
  <div class="row">
    <% data.jobs.each do |job| %>
      <div class="col-xs-12 col-lg-6 col-lg-6-offset-1">
        <div class="card-container">

          <div class="card-left">
            <div class="card-logo">
              <% link_to job.website, class: "card-logo" do %>
                <%= image_tag job.logo, class: "job_image" %>
              <% end %>
            </div>
            <div class="card-subtitle">
              <div>
                <h2><%= job.activity %></h2> <h2>(<%= job.city %>)</h2>
              </div>
              <p><%= job.date_in %> - <%= job.date_out %></p>
              <p></p>
            </div>
          </div>

          <div class="card-right">

            <div class="card-company">
              <%= job.company%>
            </div>

            <div class="card-title">
              <h1><%= job.status %></h1>
            </div>

            <div>
              <p><%= job.functions %></p>
            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
